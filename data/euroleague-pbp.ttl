@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix euro: <http://euroleague.net/ontology#> .
@prefix game: <http://euroleague.net/game/2024/> .
@prefix player: <http://euroleague.net/player/> .
@prefix team: <http://euroleague.net/team/> .

# ============================================================
# EUROLEAGUE BASKETBALL ONTOLOGY
# Based on: https://medium.com/@skontopo2009/
# ============================================================

# Core Classes
euro:Game a owl:Class ;
    rdfs:label "Basketball Game" .

euro:Team a owl:Class ;
    rdfs:label "Basketball Team" .

euro:Player a owl:Class ;
    rdfs:label "Basketball Player" .

euro:Event a owl:Class ;
    rdfs:label "Play-by-Play Event" .

euro:Shot rdfs:subClassOf euro:Event .
euro:Assist rdfs:subClassOf euro:Event .
euro:Rebound rdfs:subClassOf euro:Event .
euro:Steal rdfs:subClassOf euro:Event .
euro:Block rdfs:subClassOf euro:Event .
euro:Foul rdfs:subClassOf euro:Event .
euro:Turnover rdfs:subClassOf euro:Event .

# OWL Properties (generate reasoning rules)
euro:teammateOf a owl:SymmetricProperty .
euro:assistedBy a owl:TransitiveProperty .
euro:playsFor a owl:TransitiveProperty .

